  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Notes</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Note</h2>
            <span class="text-light">Use the below form to Update a Note</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="tag" class="text-light">Tag</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="tag" value="<%= user.tag %>" placeholder="School">
        </div>
        <div class="form-group">
            <label for="todo" class="text-light">Todo</label>
            <input type="text" name="todo" value="<%= user.todo%>" placeholder="Complete....">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

